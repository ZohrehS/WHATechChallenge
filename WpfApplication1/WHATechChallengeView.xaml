        <TextBlock Text="Unusual Rate Wins" FontStyle="Italic" FontWeight="Bold"/>

        <views:UnusualSettledBetsView Grid.Row="1"/>

        <TextBlock Grid.Row="2" Text="Risky Unsettled Bets" FontStyle="Italic" FontWeight="Bold"/>

        <views:RiskyUnsettledBetsView Grid.Row="3"/>
